<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.wullenweber_informatik.micfit.TrainingActivity">
    
    <TextView
        android:id="@+id/text_lesson"
        android:layout_width="379dp"
        android:layout_height="402dp"
        android:layout_marginTop="8dp"
        android:text="C"
        android:textAlignment="center"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_timer_1" />

    <TextView
        android:id="@+id/text_timer_1"
        android:layout_width="176dp"
        android:layout_height="111dp"
        android:layout_marginEnd="8dp"
        android:text="A"
        android:textAlignment="center"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/text_timer_2"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_timer_2"
        android:layout_width="177dp"
        android:layout_height="111dp"
        android:text="B"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textColor="@color/colorAccent" />

</android.support.constraint.ConstraintLayout>
